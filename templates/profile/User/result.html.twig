<div id="result">
    <table class="table table-hover table-sm" id="result">
        <thead class="thead-light">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Country</th>
            <th scope="col">Language</th>
        </tr>
        </thead>
        <tbody>
        {% for profile_item in profile %}
            <tr>
                <td>{{ profile_item.name }}</td>
                <td>{{ profile_item.country }}</td>
                <td>{{ profile_item.language }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>